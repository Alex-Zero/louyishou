.goods-manager {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 31.25rpx;
    background: white;
}

.goods-manager .goods-manager-left {
    display: flex;
}

.goods-manager .goods-manager-left .column {
    display: flex;
    flex-direction: column;
}

.row {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70rpx;
}

.goods-manager .goods-manager-left .brand {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.goods-manager .goods-manager-left .brand image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.goods-manager .goods-manager-right {
    border: 1px solid #b4282d;
    padding: 10rpx 20rpx;
    color: #b4282d;
    font-size: 24rpx;
}

.fans,.fans1 {
    background: #fff;
    margin-top: 20rpx;
}

.fans .p {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans .h {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans .h .label {
    float: left;
    font-size: 30rpx;
    color: #333;
}

.fans .h .status {
    float: right;
    font-size: 24rpx;
}

.fans .h image {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    right: 25rpx;
}

.fans1 .h {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans1 .h .label {
    float: left;
    font-size: 30rpx;
    color: #333;
}

.fans1 .h .status {
    float: right;
    font-size: 24rpx;
}

.fans1 .h image {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    right: 25rpx;
}

.info {
    background: #fff;
}

.info .i {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 172rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    justify-content: space-between;
}

.info .sum {
    font-size: 60rpx;
    width: 350rpx;
    color: #b4282d;
}

.info .sum text {
    font-size: 28rpx;
    color: #333;
}

.info .y,.info .t {
    display: flex;
    flex-direction: column;
    text-align: center;
    width: 200rpx;
}

.info .l {
    width: 1px;
    border-right: 1px solid #000;
}

.list {
    background-color: #fff;
    width: 100%;
}

.list .border-bottom {
    border-bottom: 1rpx #f4f4f4 solid;
}

.list .item {
    width: 33.3333%;
    height: 200rpx;
}

.list .item .list-img {
    width: 100%;
    text-align: center;
}

.list .item .list-img .img {
    width: 50rpx;
    height: 50rpx;
}

.list .item .list-content {
    color: #666;
}

.form-box {
    width: 100%;
    height: auto;
    overflow: hidden;
    padding: 0 40rpx;
    background: #fff;
}

.login-btn {
    margin: 125rpx 0 40rpx 0;
    height: 96rpx;
    line-height: 96rpx;
    color: #fff;
    font-size: 30rpx;
    width: 100%;
    background: #b4282d;
    border-radius: 6rpx;
}