.form-box {
    width: 100%;
    height: auto;
    overflow: hidden;
    padding: 0 40rpx;
    background: #fff;
}

.login-btn {
    margin: 40rpx 0 40rpx 0;
    height: 96rpx;
    line-height: 96rpx;
    color: #fff;
    font-size: 30rpx;
    width: 100%;
    background: #b4282d;
    border-radius: 6rpx;
}

.goods-manager {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 31.25rpx;
    background: white;
}

.goods-manager .goods-manager-left {
    display: flex;
}

.goods-manager .goods-manager-left .column {
    display: flex;
    flex-direction: column;
}

.goods-manager .goods-manager-left .brand {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.goods-manager .goods-manager-left .brand image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.goods-manager .goods-manager-right {
    border: 1px solid #b4282d;
    padding: 10rpx 10rpx;
    color: #b4282d;
    font-size: 24rpx;
}

.fans,.fans1 {
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
}

.fans .p {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans .h {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans .h .label {
    float: left;
    font-size: 30rpx;
    color: #333;
}

.fans .h .status {
    float: right;
    font-size: 24rpx;
}

.fans .h image {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    right: 25rpx;
}

.fans1 .h {
    display: flex;
    height: 93.75rpx;
    line-height: 93.75rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    align-items: center;
}

.fans1 .h .label {
    float: left;
    font-size: 30rpx;
    color: #333;
}

.fans1 .h .status {
    float: right;
    font-size: 24rpx;
}

.fans1 .h image {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    right: 25rpx;
}

.info {
    background: #fff;
}

.info .i {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 172rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
    justify-content: space-between;
}

.info .sum {
    font-size: 60rpx;
    width: 350rpx;
    color: #b4282d;
}

.info .sum text {
    font-size: 28rpx;
    color: #333;
}

.info .y,.info .t {
    display: flex;
    flex-direction: column;
    text-align: center;
    width: 200rpx;
}

.info .l {
    width: 1px;
    border-right: 1px solid #000;
}

.related-goods {
    width: 750rpx;
    height: auto;
    overflow: hidden;
    margin-top: 20rpx;
    background: #fff;
}

.related-goods .h {
    width: 750rpx;
    line-height: 33rpx;
    padding: 40rpx 0;
    background: #fff;
    text-align: center;
    border-bottom: 1px solid #f4f4f4;
}

.related-goods .h .line {
    display: inline-block;
    position: absolute;
    top: 72rpx;
    left: 0;
    z-index: 2;
    height: 1px;
    margin-left: 225rpx;
    width: 300rpx;
    background: #ccc;
}

.related-goods .h .title {
    z-index: 3;
    height: 33rpx;
    text-align: center;
    width: 500rpx;
    background: #fff;
    font-weight: bold;
}

.related-goods .b {
    width: 750rpx;
    height: auto;
    overflow: hidden;
    padding: 0 5rpx 0 8.5rpx;
}

.related-goods .b .item {
    float: left;
    width: 335rpx;
    height: 495rpx;
    margin: 0 17.5rpx;
}

.related-goods .b .item-b {
    margin-left: 42rpx;
}

.related-goods .b .img {
    width: 335rpx;
    height: 335rpx;
    background: #f4f4f4;
}

.related-goods .b .span {
    background: #b4282d;
    color: #fff;
    font-size: 20rpx;
    padding: 2rpx 8rpx;
}

.related-goods .b .name {
    display: block;
    width: 335rpx;
    height: 35rpx;
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.related-goods .b .price {
    line-height: 30rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #b4282d;
}

.related-goods .b .vip_price {
    padding-left: 10rpx;
    line-height: 30rpx;
    font-size: 20rpx;
}

.related-goods .b .price_o {
    line-height: 30rpx;
    font-size: 26rpx;
    text-decoration: line-through;
    color: #ccc;
    padding-left: 10rpx;
}