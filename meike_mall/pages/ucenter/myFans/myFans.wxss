.goods-manager {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 31.25rpx;
    background: white;
    margin-top: 20rpx;
}

.goods-manager .goods-manager-left {
    display: flex;
    align-items: center;
}

.info-no {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    padding: 10rpx;
    font-size: 28rpx;
    color: #666;
}

.goods-manager .goods-manager-left .column {
    display: flex;
    flex-direction: column;
}

.goods-manager .goods-manager-left .brand {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}

.goods-manager .goods-manager-left .brand image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.goods-manager .goods-manager-right {
    padding: 10rpx 20rpx;
}