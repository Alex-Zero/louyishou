page {
    background: #fff;
}

.container {
    background: #fff;
}

.content {
    width: 100%;
    height: auto;
    font-size: 0;
}

.title {
    font-size: 45rpx;
    font-weight: bold;
    line-height: 140%;
    word-break: break-all;
}

.info {
    color: #b2b2b2;
}

.info text {
    padding: 0 20rpx 0 5rpx;
}

.detail {
    font-size: 11pt;
    line-height: 150%;
    padding: 50rpx 15rpx 200rpx;
    word-break: break-all;
    text-align: justify;
}