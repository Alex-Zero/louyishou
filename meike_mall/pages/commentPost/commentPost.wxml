<view class="container">
    <view class="post-comment">
        <view class="input-box">
            <textarea bindinput="bindInpuntValue" class="content" focus="true" maxlength="140" placeholder="留言经过筛选后，对所有人可见"></textarea>
            <text class="count">{{140-content.length}}</text>
        </view>
        <view class="btns">
            <view bindtap="onClose" class="close">取消</view>
            <view bindtap="onPost" class="post">发表</view>
        </view>
    </view>
</view>
